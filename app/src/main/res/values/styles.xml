<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/light</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textSize">@dimen/_80sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/light</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textSize">@dimen/_49sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_40sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="AppTheme.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/regular</item>
    </style>

</resources>