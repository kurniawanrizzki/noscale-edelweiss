<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_13sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_7sdp"
    app:contentPadding="@dimen/_13sdp"
    app:cardBackgroundColor="@color/colorWhite"
    >

    <LinearLayout
        android:id="@+id/ll_module_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_module_icon"
            android:layout_width="@dimen/_83sdp"
            android:layout_height="@dimen/_50sdp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_lamp"
            />

        <com.noscale.edelweiss.common.widget.typography.EdelweissSubtitle2TextView
            android:id="@+id/tv_module_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_gravity="center_horizontal"
            tools:text="@tools:sample/lorem"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>