<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_7sdp"
    app:contentPadding="@dimen/_7sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_payment_image"
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_64sdp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/default_gallery"
            />

        <com.noscale.edelweiss.common.widget.typography.EdelweissSubtitle2TextView
            android:id="@+id/tv_payment_booking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_payment_image"
            tools:text="@tools:sample/lorem"
            />

        <com.noscale.edelweiss.common.widget.typography.EdelweissCaptionTextView
            android:id="@+id/tv_payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_payment_booking_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_booking_number"
            tools:text="@tools:sample/lorem"
            />

        <com.noscale.edelweiss.common.widget.typography.EdelweissCaptionTextView
            android:id="@+id/tv_payment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_payment_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_date"
            tools:text="@tools:sample/lorem"
            />

        <com.noscale.edelweiss.common.widget.typography.EdelweissSubtitle2TextView
            android:id="@+id/tv_payment_booking_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintLeft_toLeftOf="@id/tv_payment_type"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_type"
            tools:text="@tools:sample/lorem"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>