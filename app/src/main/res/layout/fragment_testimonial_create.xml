<?xml version="1.0" encoding="utf-8"?>
<com.noscale.edelweiss.common.widget.EdelweissConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_17sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_testimonial_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_testimonial_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/testimonial_txt"
            app:layout_constraintTop_toTopOf="@id/et_testimonial_content"
            app:layout_constraintBottom_toBottomOf="@id/et_testimonial_content"
            app:layout_constraintRight_toLeftOf="@+id/et_testimonial_content"
            app:layout_constraintWidth_percent="0.3"
            />

        <EditText
            android:id="@+id/et_testimonial_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="4"
            android:maxLines="4"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_fragment_title"
            app:layout_constraintWidth_percent="0.7"
            />

        <Button
            android:id="@+id/b_testimonial_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:text="@string/submit_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.noscale.edelweiss.common.widget.EdelweissConstraintLayout>